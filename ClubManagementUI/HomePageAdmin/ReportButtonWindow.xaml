<UserControl x:Class="ClubManagementUI.HomePageAdmin.ReportButtonWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClubManagementUI.HomePageAdmin"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="990" Loaded="UserControl_Loaded">
    <Grid Background="white">
        <Rectangle HorizontalAlignment="Center" Height="57"  Margin="0,54,0,0" VerticalAlignment="Top" Width="914"
       RadiusX="10" RadiusY="10" Fill="#C0C0C0" Stroke="Transparent"/>
        <Label Content="Tên clb:" HorizontalAlignment="Left" Margin="44,65,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.643,0.636" Height="33" Width="64" FontSize="16" />
        <Border CornerRadius="8" BorderBrush="Gray" BorderThickness="1" Background="White" Width="173" Height="27" 
            Margin="110,68,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top">
            <ComboBox x:Name="ClubIdSearchComBox" FontSize="17" Background="Transparent" BorderThickness="0" Padding="5,2" HorizontalAlignment="Left" Width="169"/>
        </Border>

        <Label Content="Từ ngày:" HorizontalAlignment="Left" Margin="289,65,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.132,0.578" Height="33" Width="72" FontSize="16"/>
        <Border CornerRadius="8" BorderBrush="Gray" BorderThickness="1" Background="White" Width="196" Height="27" 
            Margin="359,68,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top">
            <DatePicker x:Name="SearchFromDate" HorizontalAlignment="Left" FontSize="17" Background="Transparent" BorderThickness="0" Padding="5,2" RenderTransformOrigin="0.5,0.5" Width="184"/>
        </Border>

        <Label Content="Đến ngày:" HorizontalAlignment="Left" Margin="558,67,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.132,0.578" Height="33" Width="86" FontSize="16"/>
        <Border CornerRadius="8" BorderBrush="Gray" BorderThickness="1" Background="White" Width="183" Height="27" 
            Margin="643,70,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <DatePicker x:Name="SearchToDate" HorizontalAlignment="Center" FontSize="17" Background="Transparent" BorderThickness="0" Padding="5,2" RenderTransformOrigin="0.5,0.5" Width="181"/>
        </Border>

        <TextBlock Text="Quản lý báo cáo" FontSize="28" FontWeight="Bold" Height="42" VerticalAlignment="Top" Margin="340,4,368,0"/>

        <DataGrid x:Name="ReportDataGird" Margin="33,120,13,282" RenderTransformOrigin="0.5,0.5" SelectionMode="Single" 
              AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="ReportDataGird_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ReportId" Width="70" Binding="{Binding ReportId}"/>
                <DataGridTextColumn Header="ClubName" Width="120" Binding="{Binding Club.ClubName}"/>
                <DataGridTextColumn Header="Semester" Width="110" Binding="{Binding Semester}"/>
                <DataGridTextColumn Header="MemberChanges" Width="160" Binding="{Binding MemberChanges}"/>
                <DataGridTextColumn Header="EventSummary" Width="160" Binding="{Binding EventSummary}"/>
                <DataGridTextColumn Header="ParticipationStats" Width="160" Binding="{Binding ParticipationStats}"/>
                <DataGridTextColumn Header="CreatedDate" Width="150" Binding="{Binding CreatedDate}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="ReportId:" HorizontalAlignment="Left" Margin="22,454,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="bold"/>
        <TextBox x:Name="ReportIdTextBox" HorizontalAlignment="Left" Margin="112,449,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154" FontSize="17" Height="44" IsEnabled="False"/>

        <Label Content="Semester:" HorizontalAlignment="Left" Margin="14,519,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="bold"/>
        <TextBox x:Name="SemesterTextBox" HorizontalAlignment="Left" Margin="113,519,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152" FontSize="17" Height="44"/>

        <Label Content="CreatedDate:" HorizontalAlignment="Left" Margin="7,590,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="bold"/>
        <DatePicker x:Name="CreatedDateDatePic" HorizontalAlignment="Left" Margin="133,584,0,0" Text="" VerticalAlignment="Top" Width="214" FontSize="17" Height="44"/>

        <Label Content="EventSummary:" HorizontalAlignment="Left" Margin="17,653,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="bold" RenderTransformOrigin="0.332,0.754"/>
        <TextBox x:Name="EventSummaryTextBox" HorizontalAlignment="Left" Margin="172,645,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="223" FontSize="17" Height="44"/>

        <Label Content="MemberChanges:" HorizontalAlignment="Left" Margin="283,520,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="bold"/>
        <TextBox x:Name="MemberChangesTextBox" HorizontalAlignment="Left" Margin="444,515,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="236" FontSize="17" Height="44"/>

        <Label Content="ParticipationStatus:" HorizontalAlignment="Left" Margin="353,588,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="bold" Width="174"/>
        <TextBox x:Name="ParticipationStatusTextBox" HorizontalAlignment="Left" Margin="536,579,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="236" FontSize="17" Height="44"/>

        <Label Content="ClubID:" HorizontalAlignment="Left" Margin="314,453,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="bold"/>
        <ComboBox x:Name="ClubIdComBox" HorizontalAlignment="Left" Margin="395,445,0,0" VerticalAlignment="Top" Width="195" FontSize="17" Height="44"/>

        <Button x:Name="SaveReportButton" Content="Lưu" HorizontalAlignment="Left" Margin="445,648,0,0" VerticalAlignment="Top" Height="36" Width="89" Style="{StaticResource CRUDButtonStyle}" Click="SaveReportButton_Click" />
        <Button x:Name="DeleteReportButton" Content="Xóa" HorizontalAlignment="Left" Margin="556,647,0,0" VerticalAlignment="Top" Height="36" Width="89" Style="{StaticResource CRUDButtonStyle}" Click="DeleteReportButton_Click" />
        <Button x:Name="ResetReportButton" Content="Reset" HorizontalAlignment="Left" Margin="664,645,0,0" VerticalAlignment="Top" Height="36" Width="89" Style="{StaticResource CRUDButtonStyle}" Click="ResetReportButton_Click" />
        <Button x:Name="SearchReportButton" Content="Tìm kiếm" HorizontalAlignment="Left" Margin="835,65,0,0" VerticalAlignment="Top" Height="36" Width="89" Style="{StaticResource CRUDButtonStyle}"/>

    </Grid>
</UserControl>
