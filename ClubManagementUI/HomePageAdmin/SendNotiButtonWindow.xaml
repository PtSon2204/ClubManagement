<UserControl x:Class="ClubManagementUI.HomePageAdmin.SendNotiButtonWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClubManagementUI.HomePageAdmin"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="990">
    <Grid Background="#f4f4f4" >
        <Rectangle HorizontalAlignment="Left" Height="636" Margin="73,23,0,0" Stroke="Black" VerticalAlignment="Top" Width="852"/>

        <TextBlock Text="📨 Gửi thông báo qua Email" FontSize="30" FontWeight="Bold" Height="42" VerticalAlignment="Top" Margin="293,36,261,0"/>

        <Label Content="Email người nhận:" HorizontalAlignment="Left" Margin="126,115,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.356,1.479" FontSize="25" FontWeight="Bold" Foreground="#555"/>
        <TextBox x:Name="EmailSendTextBox" HorizontalAlignment="Left" Margin="128,174,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="743" Height="51" FontSize="20" BorderBrush="#ccc" BorderThickness="1" Background="#fafafa" AcceptsReturn="True"/>

        <Label Content="Nội dung thông báo:" HorizontalAlignment="Left" Margin="126,245,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.356,1.479" FontSize="25" FontWeight="Bold" Foreground="#555"/>
        <TextBox x:Name="ContentSendTextBox" HorizontalAlignment="Left" Margin="130,302,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="742" Height="246" FontSize="20" BorderBrush="#ccc" BorderThickness="1" Background="#fafafa" AcceptsReturn="True"/>

        <Button x:Name="SendNotica" Content="📧 Gửi thông báo" HorizontalAlignment="Left" Margin="262,572,0,0" VerticalAlignment="Top" Height="47" Width="224" Style="{StaticResource CRUDButtonStyle}" Click="SendNotica_Click"/>
        <Button x:Name="ResetNotica" Content="🧹 Đặt lại" HorizontalAlignment="Left" Margin="527,569,0,0" VerticalAlignment="Top" Height="47" Width="230" Style="{StaticResource CRUDButtonStyle}" Click="ResetNotica_Click" />

    </Grid>
</UserControl>
