<UserControl x:Class="ClubManagementUI.HomePageAdmin.StatisticButtonWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="990">

    <Grid Background="White" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Báo cáo thông kê" FontSize="28" FontWeight="Bold" Height="42" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.ColumnSpan="3"/>
        <!-- Thống kê thành viên -->
        <Border Grid.Column="0" CornerRadius="6" BorderBrush="#ccc" BorderThickness="1" Background="#f8f9fc" Padding="10" Margin="10,90,0,164">
            <StackPanel>
                <TextBlock Text="Thống kê thành viên theo CLB" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Label Content="Club:" VerticalAlignment="Center" FontSize="14"/>
                    <ComboBox x:Name="ClubCombox" Width="80" Margin="8,0" FontSize="14"/>
                    <Button x:Name="StatisticClub" Content="Thống kê" Width="90" Height="26" FontSize="13" Style="{StaticResource FilterButtonStyle}" />
                </StackPanel>
                <!--Margin="Left,Top,Right,Bottom"-->
                <DataGrid x:Name="MemberStatsGrid" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" FontSize="13"
                          RowHeight="28" Height="259">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT" Binding="{Binding Index}" Width="50" />
                        <DataGridTextColumn Header="Tên CLB" Binding="{Binding ClubName}" Width="*" />
                        <DataGridTextColumn Header="Số thành viên" Binding="{Binding MemberCount}" Width="100" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,8">
                    <TextBlock Text="Tổng số câu lạc bộ:" FontSize="18" FontWeight="Bold" Height="42" VerticalAlignment="Top" Margin="10,10,50,0" Width="224"/>
                    <Button x:Name="ExportClub" Content="Xuất excel" Width="120" Height="40" FontSize="13" Style="{StaticResource FilterButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Thống kê sự kiện -->
        <Border Grid.Column="2" CornerRadius="6" BorderBrush="#ccc" BorderThickness="1" Background="#f8f9fc" Padding="10" Margin="0,87,10,165">
            <StackPanel>
                <TextBlock Text="Thống kê sự kiện theo CLB" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Label Content="Từ:" VerticalAlignment="Center" FontSize="14"/>
                    <DatePicker x:Name="FromDateEvent" Width="117" Margin="8,0" FontSize="14"/>
                    <Label Content="Đến:" VerticalAlignment="Center" FontSize="14"/>
                    <DatePicker x:Name="ToDateEvent" Width="112" Margin="8,0" FontSize="14"/>
                    <Button x:Name="StatisticEvent" Content="Thống kê" Width="90" Height="26" FontSize="13" Style="{StaticResource FilterButtonStyle}" />
                </StackPanel>

                <DataGrid x:Name="EventStatsGrid" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False"
                          FontSize="13" RowHeight="28" Height="260">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT" Binding="{Binding Index}" Width="50" />
                        <DataGridTextColumn Header="Tên CLB" Binding="{Binding ClubName}" Width="*" />
                        <DataGridTextColumn Header="Số sự kiện" Binding="{Binding EventCount}" Width="100" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,8">
                    <TextBlock Text="Tổng số sự kiện:" FontSize="18" FontWeight="Bold" Height="42" VerticalAlignment="Top" Margin="10,10,50,0" Width="224"/>
                    <Button x:Name="ExportEvent" Content="Xuất excel" Width="120" Height="40" FontSize="13" Style="{StaticResource FilterButtonStyle}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
