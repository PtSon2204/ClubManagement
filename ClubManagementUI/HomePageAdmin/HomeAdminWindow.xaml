<Window x:Class="ClubManagementUI.HomePageAdmin.HomeAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagementUI.HomePageAdmin"
        mc:Ignorable="d"
        Title="HomeAdminWindow" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <StackPanel Background="#2E2E2E" Grid.Column="0">
            <StackPanel Margin="10">
                <Image Source="/HomePageAdmin/HomePageAdmin.png" Width="198" Height="147" Margin="0,10" HorizontalAlignment="Center"/>
                <TextBlock Text="Welcome Admin" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" />
            </StackPanel>

            <Button x:Name="UserButton" Content="Quản lý người dùng" Style="{StaticResource MenuButtonStyle}" />
            <Button x:Name="ManagementCLB" Content="Quản lý CLB" Style="{StaticResource MenuButtonStyle}" />
            <Button x:Name="ManagementEvent" Content="Quản lý sự kiện" Style="{StaticResource MenuButtonStyle}" />
            <Button x:Name="ReportEvent" Content="Báo cáo hoạt động" Style="{StaticResource MenuButtonStyle}" />
        </StackPanel>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" Margin="20">
            <TextBlock Text="Quản lý người dùng" FontSize="28" FontWeight="Bold" Height="490" VerticalAlignment="Top"/>
            <!-- Nội dung thực tế bạn thay ở đây -->
        </Grid>
        <TextBlock x:Name="WelcomeText" FontSize="20" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <Button Content="Logout" Width="100" Height="30" 
                Margin="0,529,23,0"  Style="{StaticResource LogoutButtonStyle}"  Click="Logout_Click" Grid.Column="1"/>
    </Grid>
</Window>
