<Window x:Class="ClubManagementUI.Log.ForgetPassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagementUI.Log"
        mc:Ignorable="d"
        Title="ForgetPassWindow" Height="300" Width="700">
    <Grid Height="434" VerticalAlignment="Center">
        <Rectangle HorizontalAlignment="Left" Height="207" Margin="63,103,0,0" Stroke="Black" VerticalAlignment="Top" Width="596" Fill="Silver"/>

        <Label Content="Đổi mật khẩu" HorizontalAlignment="Left" Margin="204,98,0,0" VerticalAlignment="Top" FontSize="40"/>

        <Label Content="Email:" HorizontalAlignment="Left" Margin="89,162,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.037,0.469"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="91,205,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="503" FontSize="20" Height="48" TextChanged="EmailTextBox_TextChanged"/>
        <Button x:Name="SendMailButton" Content="Gửi" HorizontalAlignment="Left" Margin="187,265,0,0" VerticalAlignment="Top" Height="29" Width="145" RenderTransformOrigin="0.5,0.5" Click="SendMailButton_Click"/>
        <Button x:Name="ExitMailButton" Content="Thoát" HorizontalAlignment="Left" Margin="363,266,0,0" VerticalAlignment="Top" Height="28" Width="156" Click="ExitMailButton_Click"/>

    </Grid>
</Window>
