<UserControl x:Class="ClubManagementUI.HomePage.MemberChangePassButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClubManagementUI.HomePage"
             mc:Ignorable="d" 
                                d:DesignHeight="700" d:DesignWidth="990" Loaded="UserControl_Loaded">
    <Grid Background="white">
        <Rectangle HorizontalAlignment="Left" Height="511"  Margin="93,116,0,0" VerticalAlignment="Top" Width="821"
   RadiusX="10" RadiusY="10" Fill="#C0C0C0" Stroke="Transparent"/>

        <TextBlock Text="Đổi mật khẩu" FontSize="35" FontWeight="Bold" Height="55" VerticalAlignment="Top" Margin="397,138,311,0"/>

        <Label Content="Email:" HorizontalAlignment="Left" Margin="177,240,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="bold"/>
        <TextBox x:Name="UserEmailTextBox" HorizontalAlignment="Left" Margin="263,232,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="600" FontSize="17" Height="44" IsEnabled="False"/>

        <Label Content="OldPass:" HorizontalAlignment="Left" Margin="156,313,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="bold"/>
        <TextBox x:Name="OldPassTextBox" HorizontalAlignment="Left" Margin="262,308,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="600" FontSize="17" Height="44" />

        <Label Content="NewPass:" HorizontalAlignment="Left" Margin="149,393,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="bold" RenderTransformOrigin="0.171,-0.066"/>
        <TextBox x:Name="NewPassTextBox" HorizontalAlignment="Left" Margin="264,386,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="600" FontSize="17" Height="44" />

        <Label Content="Confirm Pass:" HorizontalAlignment="Left" Margin="113,477,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="bold"/>
        <TextBox x:Name="CfPassTextBox" HorizontalAlignment="Left" Margin="260,470,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="600" FontSize="17" Height="44" />


        <Button x:Name="SavePassButton" Content="Lưu" HorizontalAlignment="Left" Margin="347,551,0,0" VerticalAlignment="Top" Height="42" Width="184" Style="{StaticResource CRUDButtonStyle}" Click="SavePassButton_Click" />
        <Button x:Name="ResetPassButton" Content="Reset" HorizontalAlignment="Left" Margin="571,549,0,0" VerticalAlignment="Top" Height="42" Width="182" Style="{StaticResource CRUDButtonStyle}" Click="ResetPassButton_Click" />

    </Grid>
</UserControl>
