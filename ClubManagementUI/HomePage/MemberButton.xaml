<UserControl x:Class="ClubManagementUI.HomePage.MemberButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClubManagementUI.HomePage"
             mc:Ignorable="d" 
                      d:DesignHeight="700" d:DesignWidth="990" >
    <Grid Background="white">
        <Label Content="Danh sách câu lạc bộ " HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" Height="69" Width="416" FontSize =" 40"  />
        <DataGrid x:Name="ClubDataGrid"
              AutoGenerateColumns="False"
              Margin="20,163,20,20"
              CanUserAddRows="False"
              IsReadOnly="True"  >
            <DataGrid.Columns>
                
                <DataGridTextColumn Header="Tên câu lạc bộ" Binding="{Binding ClubName}" Width="*"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Ngày thành lập" Binding="{Binding EstablishedDate}" Width="Auto"/>
                <DataGridTemplateColumn Header="Tham gia" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Join" Click="JoinButton_Click" Tag="{Binding ClubID}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</UserControl>
